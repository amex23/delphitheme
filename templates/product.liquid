{% assign current_variant = product.selected_or_first_available_variant %}
{% assign featured_image = current_variant.featured_image | default: product.featured_image %}


<section class="flex items-start justify-center px-8 py-8 mt-[12vh]">
	  	<div class="flex flex-col justify-start w-[60%]">
			{% comment %} <div class="product-images">
		    <div class="swiper-container-product-page swiper-container-{{- product.id -}}">
		      <div class="swiper-wrapper">
		        {% for image in product.images %}
		          <div class="swiper-slide">
		            <img src="{{ image.src | img_url: 'master' }}" alt="{{ image.alt | escape }}" />
		            <div class="swiper-button-next swiper-button-next-{{- product.id -}}"></div>
		            <div class="swiper-button-prev swiper-button-prev-{{- product.id -}}"></div>
		          </div>
		        {% endfor %}
				
		      </div>
		    </div>
		  	</div>

		  	<div class="bg-red-400 flex">
				{% for image in product.images %}
					<img src="{{ image.src | product_img_url: 'medium' }}" alt="{{ product.title }} - {{ image.alt }}" />
			  	{% endfor %}
			</div> {% endcomment %}

			<div class="main">
				<div class="slider slider-for">
					{% for image in product.images %}
						<div><img src="{{ image.src | img_url: 'master' }}" alt="{{ image.alt | escape }}" /></div>
				  	{% endfor %} 
				</div>
				<div class="slider slider-nav flex flex-col relative">
						  {% comment %} <div class="absolute top-[-20%]">
							<div class="bg-red-600 relative">
							</div>
						  </div> {% endcomment %}
				  
					  {% for image in product.images %}
						<div class="bg-green-200 slide-menus"><img src="{{ image.src | img_url: 'master' }} data-slide={{- product.id -}}" alt="{{ image.alt | escape }}" /></div>
					  {% endfor %} 
				</div>

				{% comment %} <div class="slider slider-nav flex flex-col">
				  {% for image in product.images %}
					<div class=""><img src="{{ image.src | img_url: 'master' }} data-slide={{- product.id -}}" alt="{{ image.alt | escape }}" /></div>
				  {% endfor %} 
				</div> {% endcomment %}
				{% comment %} <div class="action">
				  <a href="#" data-slide="3">go to slide 3</a>
				  <a href="#" data-slide="4">go to slide 4</a>
				  <a href="#" data-slide="5">go to slide 5</a>
				</div> {% endcomment %}
			</div>
				
		</div>

  		<div class="flex flex-col justify-start items-center px-7 w-[40%]">
    
		    <div class="product-title">
		      <h1>{{ product.title }}</h1>
		    </div>

		    <div class="product-bottom">
		      <div class="product-description">
		        {{ product.description }}
		      </div>
		      {% render 'add-to-cart-form' %}
		    </div>

  		</div>
</section>




<script>

$('.slider-for').slick({
   slidesToShow: 1,
   slidesToScroll: 1,
   arrows: false,
   fade: true,
   asNavFor: '.slider-nav'
 });
 $('.slider-nav').slick({
   slidesToShow: 4,
   slidesToScroll: 1,
   asNavFor: '.slider-for',
   dots: true,
   focusOnSelect: true
 });

 $('a[data-slide]').click(function(e) {
   e.preventDefault();
   var slideno = $(this).data('slide');
   $('.slider-nav').slick('slickGoTo', slideno - 1);
 });
	

</script>

